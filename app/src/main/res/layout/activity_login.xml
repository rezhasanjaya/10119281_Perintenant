<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    >

    <TextView
        android:id="@+id/login_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="100dp"
        android:paddingBottom="40dp"
        android:text="Login"
        android:textColor="#222223"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_Text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:hint="Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/username"
        android:layout_alignParentStart="true"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/buttonLog"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#4B7BE5"
        android:text="Login"
        android:onClick="LoginToMain"
        android:textColor="#222223"
        android:textSize="18sp"
        android:theme="@style/Widget.AppCompat.Button.Colored"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/regButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#222223"
        android:text="Sign Up"
        android:onClick="SignUp"
        android:textColor="#f2f2f2"
        android:textSize="18sp"
        android:theme="@style/Widget.AppCompat.Button.Colored"
        app:cornerRadius="8dp" />

    <TextView
        android:id="@+id/nama_saya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/regButton"
        android:layout_centerVertical="true"
        android:text="Rezha Satria Sp - IF7"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/nim_saya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_saya"
        android:paddingTop="4dp"
        android:layout_centerVertical="true"
        android:text="10119281"
        android:textAlignment="center" />

</RelativeLayout>