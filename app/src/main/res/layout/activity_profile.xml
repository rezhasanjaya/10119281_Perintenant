<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:orientation="horizontal"

    >

    <TextView
        android:id="@+id/profilText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:paddingBottom="20dp"
        android:text="Profile"
        android:textColor="#222223"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="300px"
        android:layout_height="400px"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profil"
        />

    <TextView
        android:id="@+id/profil_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Rezha Satria Sanjaya Putra"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/profil_nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profil_nama"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:text="10119281"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profil_kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profil_nim"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:text="IF7"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profil_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profil_kelas"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:lineSpacingExtra="5dp"
        android:text="Saya Adalah Mahasiswa Universitas Komputer Indonesia, Jurusan Teknik Informatika, Semester 6"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/buttonBack"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profil_desc"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:backgroundTint="#DFDFDE"
        android:onClick="BackToMain"
        android:text="Back"

        android:textColor="#222223"
        android:textSize="18sp"
        android:theme="@style/Widget.AppCompat.Button.Colored" />



</RelativeLayout>