<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    >

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:paddingBottom="20dp"
        android:text="REGISTER"
        android:textColor="#222223"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/regis_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:hint="Nama Lengkap"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/regis_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regis_nama"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="25dp"
        android:hint="Username"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/regis_nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regis_username"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="25dp"
        android:hint="NIM"
        android:inputType="text|number"
        />

    <EditText
        android:id="@+id/regis_kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regis_nim"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="25dp"
        android:hint="Kelas"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/regis_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regis_kelas"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="50dp"
        android:hint="Password"

        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/buttonReg"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/regis_password"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#4B7BE5"
        android:text="SIGN UP"
        android:onClick="SignUp"
        android:layout_alignParentStart="true"
        android:textColor="#222223"
        android:textSize="18sp"
        android:theme="@style/Widget.AppCompat.Button.Colored"
        />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/regis_password"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#DFDFDE"
        android:text="BACK"
        android:onClick="BackToLogin"
        android:textColor="#222223"
        android:textSize="18sp"
        android:theme="@style/Widget.AppCompat.Button.Colored" />


</RelativeLayout>